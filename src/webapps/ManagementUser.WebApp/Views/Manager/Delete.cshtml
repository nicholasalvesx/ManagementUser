@model Microsoft.AspNetCore.Identity.IdentityUser<Guid>

@{
    ViewData["Title"] = "Deletar Usuário";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center text-danger">Deletar Usuário</h2>
    <p class="text-center">Clique no botão abaixo para excluir o usuário <strong>@Model.UserName</strong>.</p>

    <div class="text-center">
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteUserModal">
            Excluir Usuário
        </button>
    </div>
</div>

<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUserModalLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza de que deseja excluir o usuário <strong>@Model.UserName</strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-controller="Manager" asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
                </form>
            </div>
        </div>
    </div>
</div>
