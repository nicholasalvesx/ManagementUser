@model List<Microsoft.AspNetCore.Identity.IdentityUser<Guid>>

@{
    ViewData["Title"] = "Gerenciamento de Usuários";
    Layout = "_Layout";
}
<div class="d-flex" id="wrapper">

    <div class="bg-primary text-white sidebar">
        <h3 class="text-center py-3">Admin Panel</h3>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a asp-controller="Manager" asp-action="Edit" class="nav-link text-white">Editar usuarios</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Manager" asp-action="Delete" class="nav-link text-white">Deletar usuarios</a>
            </li>
        </ul>
    </div>
    
    <div class="container mt-5">
        <h1 class="display-4 text-center">@ViewData["Title"]</h1>
        <p class="text-center">Veja a lista de usuários cadastrados no sistema.</p>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mt-4">
                    <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Nome de Usuário</th>
                        <th>Email</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-center text-muted mt-4">Nenhum usuário encontrado.</p>
        }
    </div>
</div>

