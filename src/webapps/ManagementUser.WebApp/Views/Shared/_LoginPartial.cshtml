@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser<Guid>> SignInManager
@inject UserManager<IdentityUser<Guid>> UserManager

@if (ViewData["Title"]?.ToString() == "Login")
{
    <ul class="navbar-nav ms-auto">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item dropdown">
                <a id="userDropdown" class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-circle fa-lg"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <span class="dropdown-item-text text-center">Bem-vindo!</span>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-cog me-1"></i> Gerenciar Conta
                        </a>
                    </li>
                    <li>
                        <div class="dropdown-divider"></div>
                    </li>
                    <li>
                        <form id="logoutForm" method="post" asp-controller="Auth" asp-action="Logout">
                            <button type="submit" class="dropdown-item">
                                <i class="fas fa-sign-out-alt me-1"></i> Sair
                            </button>
                        </form>
                    </li>
                </ul>
            </li>
        }
    </ul>
}
