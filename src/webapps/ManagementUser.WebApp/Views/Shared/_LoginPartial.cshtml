@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser<Guid>> SignInManager
@inject UserManager<IdentityUser<Guid>> UserManager

@if (ViewData["Title"]?.ToString() == "Login")
{
    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item dropdown">
                <a id="userDropdown" class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-circle"></i> @UserManager.GetUserName(User)
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-cog"></i> Gerenciar Conta
                        </a>
                    </li>
                </ul>
            </li>
        }
    </ul>
}
